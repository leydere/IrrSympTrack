<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leydere.irrsymptrack">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IrrSympTrack">
        <activity
            android:name=".ActivityMain"
            android:label="@string/app_name"
            android:theme="@style/Theme.IrrSympTrack.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityRecordsListIrritants"
            android:theme="@style/Theme.IrrSympTrack.NoActionBar" />
        <activity android:name=".ActivityRecordsListSymptoms"
            android:theme="@style/Theme.IrrSympTrack.NoActionBar" />
        <activity android:name=".ActivityAddIrritant"
            android:theme="@style/Theme.IrrSympTrack.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ActivityAddSymptom"
            android:theme="@style/Theme.IrrSympTrack.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ActivityGraphView"
            android:theme="@style/Theme.IrrSympTrack.NoActionBar" />
        <activity android:name=".ActivityNewIrritantTags"
            android:theme="@style/Theme.IrrSympTrack.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ActivityNewSymptomTags"
            android:theme="@style/Theme.IrrSympTrack.NoActionBar"
            android:windowSoftInputMode="adjustPan" />

    </application>

</manifest>